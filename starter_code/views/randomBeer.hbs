<div class="card mb-3" style="max-width: 540px;">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="{{beer.image_url}}" class="card-img" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">{{beer.name}}</h5>
                <h5 class="card-title">{{beer.tagline}}</h5>
                <p class="card-text">{{beer.description}}</p>
                <ul>
                    {{#each beer.food_pairing}}
                    <li>{{this}}</li>
                    {{/each}}

                </ul>
                <p class="card-text"><small class="text-muted"> Brewers Tips: {{beer.brewers_tips}}</small></p>
            </div>
        </div>
    </div>
</div>